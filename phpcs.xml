<?xml version="1.0"?>
<ruleset name="Project Rules">
    <rule ref="PSR2" />
    <!-- Exclude function doc comment rule for test files only -->
    <rule ref="Squiz.Commenting.FunctionComment">
        <exclude-pattern>source/tests/*</exclude-pattern>
        <exclude-pattern>dev/api/*</exclude-pattern>
        <exclude-pattern>docker_volumes/*</exclude-pattern>
    </rule>

    <!-- Require code documentation (PHPDoc) -->
    <rule ref="Squiz.Commenting.FileComment">
        <exclude-pattern>dev/api/*</exclude-pattern>
        <exclude-pattern>source/*</exclude-pattern>
        <exclude-pattern>docker_volumes/*</exclude-pattern>
    </rule>
    <!-- Exclude AvoidStaticAccess rule -->
    <rule ref="SlevomatCodingStandard.Classes.StaticAccess">
        <exclude-pattern>*</exclude-pattern>
    </rule>
    
    <!-- Detect and remove unused use statements -->
    <rule ref="SlevomatCodingStandard.Namespaces.UnusedUses">
        <properties>
            <property name="searchAnnotations" value="true"/>
        </properties>
    </rule>
</ruleset>
